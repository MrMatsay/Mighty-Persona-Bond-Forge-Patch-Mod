<?xml version="1.0" encoding="utf-8" ?>
<!--
	===== Vanilla Weapons Expanded - Coilguns =====
-->
<Patch>
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>vanillaexpanded.vwec</li>
		</mods>
		<packageId>true</packageId>

		<caseTrue>
			<Operation Class="XmlExtensions.PatchOperationAdd">
				<xpath>Defs</xpath>
				<value><RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VWE_Gun_GaussRifle_Bond" Abstract="True"><label>bond gauss rifle</label><description>Bond an gauss rifle.</description><jobString>Bonding a gauss rifle.</jobString><researchPrerequisites><li>VWE_MassDrivers</li></researchPrerequisites><ingredients><li><filter><thingDefs><li>VWE_Gun_GaussRifle</li></thingDefs></filter><count>1</count></li></ingredients><fixedIngredientFilter><thingDefs><li>VWE_Gun_GaussRifle</li></thingDefs></fixedIngredientFilter><products><VWE_Gun_GaussRifle_Bond>1</VWE_Gun_GaussRifle_Bond></products></RecipeDef><RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VWE_Gun_GaussMagnum_Bond" Abstract="True"><label>bond gauss magnum</label><description>Bond an gauss magnum.</description><jobString>Bonding a gauss magnum.</jobString><researchPrerequisites><li>VWE_MassDrivers</li></researchPrerequisites><ingredients><li><filter><thingDefs><li>VWE_Gun_GaussMagnum</li></thingDefs></filter><count>1</count></li></ingredients><fixedIngredientFilter><thingDefs><li>VWE_Gun_GaussMagnum</li></thingDefs></fixedIngredientFilter><products><VWE_Gun_GaussMagnum_Bond>1</VWE_Gun_GaussMagnum_Bond></products></RecipeDef><RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VWE_Gun_GaussLance_Bond" Abstract="True"><label>bond gauss lance</label><description>Bond an gauss lance.</description><jobString>Bonding a gauss lance.</jobString><researchPrerequisites><li>VWE_MassDrivers</li></researchPrerequisites><ingredients><li><filter><thingDefs><li>VWE_Gun_GaussLance</li></thingDefs></filter><count>1</count></li></ingredients><fixedIngredientFilter><thingDefs><li>VWE_Gun_GaussLance</li></thingDefs></fixedIngredientFilter><products><VWE_Gun_GaussLance_Bond>1</VWE_Gun_GaussLance_Bond></products></RecipeDef></value>
			</Operation>

			<Operation Class="XmlExtensions.OptionalPatch">
				<modId>Daria40K.MightyPersonaBondForgePatch</modId>
				<key>Daria40K_MightyPersonaBondForgePatch_VanillaWeaponsExpandedCoilguns</key>
				<defaultValue>true</defaultValue>

				<caseTrue>
					<Operation Class="XmlExtensions.OptionalPatch">
						<modId>Daria40K.MightyPersonaBondForgePatch</modId>
						<key>Daria40K_MightyPersonaBondForgePatch_PBF_VanillaWeaponsExpandedCoilguns</key>
						<defaultValue>true</defaultValue>

						<caseTrue>
							<Operation Class="XmlExtensions.OptionalPatch">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_DisablePersonaBondForge</key>
								<defaultValue>false</defaultValue>

								<caseFalse>
									<Operation Class="XmlExtensions.PatchOperationAdd">
										<xpath>Defs</xpath>
										<value><RecipeDef ParentName="Make_VWE_Gun_GaussRifle_Bond"><defName>Make_VWE_Gun_GaussRifle_Bond</defName></RecipeDef><RecipeDef ParentName="Make_VWE_Gun_GaussMagnum_Bond"><defName>Make_VWE_Gun_GaussMagnum_Bond</defName></RecipeDef><RecipeDef ParentName="Make_VWE_Gun_GaussLance_Bond"><defName>Make_VWE_Gun_GaussLance_Bond</defName></RecipeDef></value>
									</Operation>
								</caseFalse>
							</Operation>
						</caseTrue>
					</Operation>
				</caseTrue>
			</Operation>	  
		</caseTrue>
	</Operation>
</Patch>