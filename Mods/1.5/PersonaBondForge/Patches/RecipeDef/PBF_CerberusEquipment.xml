<?xml version="1.0" encoding="utf-8"?>
<!--
	===== Cerberus Equipment =====
-->
<Patch>
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>syila.cerbeq</li>
		</mods>
		<packageId>true</packageId>

		<caseTrue>
			<Operation Class="XmlExtensions.PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Gun_Harrier_Bond" Abstract="True">
						<label>bond Cerberus Harrier</label>
						<description>Bond an Cerberus Harrier.</description>
						<jobString>Bonding a Cerberus Harrier.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Gun_Harrier</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Gun_Harrier</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<Gun_Harrier_Bond>1</Gun_Harrier_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Gun_M12Locust_Bond" Abstract="True">
						<label>bond M-12 Locust</label>
						<description>Bond an M-12 Locust.</description>
						<jobString>Bonding a M-12 Locust.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Gun_M12Locust</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Gun_M12Locust</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<Gun_M12Locust_Bond>1</Gun_M12Locust_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Gun_N7Typhoon_Bond" Abstract="True">
						<label>bond N7 Typhoon</label>
						<description>Bond an N7 Typhoon.</description>
						<jobString>Bonding a N7 Typhoon.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Gun_N7Typhoon</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Gun_N7Typhoon</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<Gun_N7Typhoon_Bond>1</Gun_N7Typhoon_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Gun_M22Eviscerator_Bond" Abstract="True">
						<label>bond M-22 Eviscerator</label>
						<description>Bond an M-22 Eviscerator.</description>
						<jobString>Bonding a M-22 Eviscerator.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Gun_M22Eviscerator</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>Gun_M22Eviscerator</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<Gun_M22Eviscerator_Bond>1</Gun_M22Eviscerator_Bond>
						</products>
					</RecipeDef>
				</value>
			</Operation>

			<Operation Class="XmlExtensions.OptionalPatch">
				<modId>Daria40K.MightyPersonaBondForgePatch</modId>
				<key>Daria40K_MightyPersonaBondForgePatch_CerberusEquipment</key>
				<defaultValue>true</defaultValue>

				<caseTrue>
					<Operation Class="XmlExtensions.OptionalPatch">
						<modId>Daria40K.MightyPersonaBondForgePatch</modId>
						<key>Daria40K_MightyPersonaBondForgePatch_PBF_CerberusEquipment</key>
						<defaultValue>true</defaultValue>

						<caseTrue>
							<Operation Class="XmlExtensions.OptionalPatch">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_DisablePersonaBondForge</key>
								<defaultValue>false</defaultValue>

								<caseFalse>
									<Operation Class="XmlExtensions.PatchOperationAdd">
										<xpath>Defs</xpath>
										<value>
											<RecipeDef ParentName="Make_Gun_Harrier_Bond">
												<defName>Make_Gun_Harrier_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_Gun_M12Locust_Bond">
												<defName>Make_Gun_M12Locust_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_Gun_N7Typhoon_Bond">
												<defName>Make_Gun_N7Typhoon_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_Gun_M22Eviscerator_Bond">
												<defName>Make_Gun_M22Eviscerator_Bond</defName>
											</RecipeDef>
										</value>
									</Operation>
								</caseFalse>
							</Operation>
						</caseTrue>
					</Operation>
				</caseTrue>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>